<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000"
        motion:motionInterpolator="easeInOut"
        motion:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/ss_image"
                motion:framePosition="0"
                android:scaleX="0" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_image"
                motion:framePosition="80"
                android:scaleX="1" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_image"
                motion:framePosition="0"
                android:scaleX="1" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_image"
                motion:framePosition="80"
                android:scaleY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_image"
                motion:framePosition="0"
                android:scaleY="0" />
            <KeyAttribute
                motion:motionTarget="@+id/leaf_1"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/leaf_1"
                motion:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/leaf_2"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/leaf_2"
                motion:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_note"
                motion:framePosition="60"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/ss_note"
                motion:framePosition="100"
                android:alpha="1" />

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ss_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0"
            motion:transitionEasing="decelerate" />
        <Constraint
            android:id="@+id/leaf_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            android:alpha="0" />
        <Constraint
            motion:layout_constraintVertical_bias="0.495"
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            motion:layout_constraintHorizontal_bias="0.63"
            android:layout_width="70dp"
            android:id="@+id/leaf_2"
            motion:transitionEasing="decelerate"
            android:alpha="0" />
        <Constraint
            android:id="@+id/ss_note"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:layout_width="70dp"
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            android:id="@+id/ingredient_1"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ss_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1" />
        <Constraint
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            android:layout_width="70dp"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="0dp"
            android:id="@+id/leaf_1"
            android:alpha="1"
            android:rotation="156"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            android:layout_width="70dp"
            android:id="@+id/leaf_2"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintVertical_bias="0.0"
            android:rotation="-135" />
        <Constraint
            android:id="@+id/ss_note"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            android:layout_marginBottom="24dp" />
        <Constraint
            android:layout_width="70dp"
            android:layout_height="70dp"
            motion:layout_constraintStart_toStartOf="@id/ss_image"
            motion:layout_constraintTop_toTopOf="@id/ss_image"
            motion:layout_constraintBottom_toBottomOf="@id/ss_image"
            motion:layout_constraintEnd_toEndOf="@id/ss_image"
            android:id="@+id/ingredient_1"
            android:alpha="1"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintHorizontal_bias="1.0"
            android:rotation="153" />
    </ConstraintSet>
</MotionScene>